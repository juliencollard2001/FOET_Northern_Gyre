import matplotlib.pyplot as plt
import pandas as pd
import xarray as xr
import pandas as pd
from datetime import datetime, date, time
import matplotlib.pyplot as plt
import cartopy.crs as ccrs
import cartopy.feature as cfeature
import cmocean.cm as cmo


from SLADCP import get_LADCP, get_SADCP

# Load the data from the file
year = 2015
data = get_SADCP(year)
data1 = get_LADCP(year)

latitude = data['latitude']
longitude = data['longitude']
station = data['station']
latitude1 = data1['latitude']
longitude1 = data1['longitude']
station1 = data1['station']

fig, ax = plt.subplots(subplot_kw={'projection': ccrs.PlateCarree()})
ax.plot(longitude, latitude, 'k.', label='SADCP')
ax.plot(longitude1, latitude1, 'r.', label='LADCP')

ax.set_xlabel('Longitude')
ax.set_ylabel('Latitude')
ax.set_title(f'SADCP and LADCP stations in {year}') 
ax.legend()

# Add coastlines and borders
ax.coastlines()
ax.add_feature(cfeature.BORDERS)

plt.show()

